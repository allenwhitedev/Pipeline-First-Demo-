	<% if !@event.checkincode.nil? %>

	<% if !current_user.attending?(@event) %>
	<br>
	<br>
		<%= form_for(current_user.eu_rels.build(attended_id: @event.id)) do |f| %>
	  	<div><%= f.hidden_field :attended_id %></div>
	  	<%= f.submit "Checkin to this Event", class: "btn-xlarge", id: "#enlarge-btn" %>
	  <% end %>
	<% else %>
		<h1>You are checked in to this event.</h1>
	<% end %>

<% else %>
	<h1>The event is currently locked.</h1>
<% end %>